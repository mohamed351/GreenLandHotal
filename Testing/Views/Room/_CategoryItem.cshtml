@model Testing.ViewModels.CheckAvailableViewModel
@{
    ViewBag.Title = "_CategoryItem";
    Layout = null;
}

<div class="modal-header">

    <div class="full-width-image" style="background-image:url(@("data:image/jpeg;base64,"+Convert.ToBase64String(Model.Image)))">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h1 class="modal-title" style="color:#fff;font-size: 5rem;">@Model.CateogyName</h1>

    </div>
</div>

<div class="modal-body">

    <div class="container">
        <div class="row">
            
            @if(Model.Rooms.Count() == 0)
            {
               <div class="col-md-12">
                   <p class="text-danger text-center">There is no Room Avaliable </p>
               </div>
            }

            @foreach (var item in Model.Rooms)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="room-item">
                        <img src="@("data:image/jpeg;base64,"+Convert.ToBase64String(Model.Image))" alt="@item.Image">
                        <div class="ri-text">

                            <h3>@item.Price<span>/Pernight</span></h3>
                            <table>
                                <tbody>

                                    <tr>
                                        <td class="r-o">Capacity:</td>
                                        <td>@item.NumberOfPeople</td>
                                    </tr>
                                    <tr>
                                        <td class="r-o">Bed:</td>
                                        <td>@item.NumberOfBeds</td>
                                    </tr>

                                </tbody>
                            </table>

                            @Html.ActionLink("More Details", "Details", "Room", new { ID = item.ID }, new { @class = "primary-btn" })
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</div>


<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

</div>
